               android:layout_marginTop="10dp" />

       </LinearLayout>

</LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >


    </LinearLayout>












    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çıkış"
