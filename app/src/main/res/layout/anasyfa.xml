               android:id="@+id/textView36"
               android:textColor="@android:color/black"
               android:layout_marginTop="10dp"

               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tel.No. :"
               android:id="@+id/textView37"
               android:textColor="@android:color/black"
