<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svScroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anas"

    android:weightSum="1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KAYIT OL"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="140dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Üyelik Bilgileri"
        android:id="@+id/textView7"
        android:textSize="20dp"

        android:textColor="@android:color/black"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lydk4"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İsim *  "
            android:id="@+id/textView9"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isimkayitoledittext"
            android:textColor="@android:color/black"
            android:layout_marginTop="1dp"
            android:textSize="15dp"

           >
        </EditText>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lydk5"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soyisim *  "
            android:id="@+id/textView10"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/soyisimkayitoledittext"
            android:layout_marginTop="0dp"
            android:textSize="15dp"
            android:textColor="@android:color/black" >
        </EditText>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lydk1"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Adı *  "
        android:id="@+id/textView6"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:id="@+id/kullaniciadikayitoledittext"
        android:textSize="15dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black"
     >
        </EditText>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lydk2"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parola *  "
            android:id="@+id/textView4"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="0dp"
            android:id="@+id/parolakayitoledittext"
          />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lydk3"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parola Onay *  "
            android:id="@+id/txt5"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/parolatekrarkayitoledittext"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginTop="0dp">
        </EditText>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lydk6"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E_Mail *  "
            android:id="@+id/textView3"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailkayitoledittext"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginTop="0dp"
            > </EditText>

        </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/lydk10"
      android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Telefon Numarası"
          android:id="@+id/textView14"
          android:layout_marginTop="5dp"
          android:textSize="15dp"
          android:textColor="@android:color/black" />

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="phone"
          android:textColor="@android:color/black"
          android:textSize="15dp"
          android:layout_marginTop="0dp"
          android:id="@+id/telefonkayitoledittext"
       > </EditText>

  </LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/lydk7"
     android:orientation="horizontal"
     >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Adres *  "
         android:id="@+id/textView11"
         android:textSize="15dp"
         android:layout_marginTop="5dp"
         android:textColor="@android:color/black" />

     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/adreskayitoledittext"
         android:textSize="15dp"
         android:layout_marginTop="0dp"
         android:textColor="@android:color/black">
     </EditText>
     </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/lydk8"
     android:orientation="horizontal"
     >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Şehir *  "
         android:id="@+id/textView12"
         android:layout_marginTop="5dp"
         android:textSize="15dp"
         android:textColor="@android:color/black" />

     <ExpandableListView
         android:layout_width="wrap_content"
         android:layout_height="53dp"
         android:id="@+id/sehirkayitolexpandableListView"
         android:footerDividersEnabled="false"
         android:textFilterEnabled="false"
         android:touchscreenBlocksFocus="false" >
         </ExpandableListView>
     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lydk9"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İlçe *  "
            android:id="@+id/textView13" android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textColor="@android:color/black" />

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:id="@+id/ilcekayitolexpandableListView2"
           > </ExpandableListView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lydk11"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sözleşme Kabulü *  "
            android:id="@+id/textView8"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kullanıcı Sözleşmesi"
            android:id="@+id/kabulkayitoledittext"
            android:textSize="15dp"
            android:checked="false" />
    </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="34dp"
     android:id="@+id/lydk12"
     android:orientation="horizontal"
     >

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="KAYIT OL"
         android:id="@+id/kayitbuttonkayitol"
         android:background="@android:color/white"
         android:textColor="@android:color/black"
         android:textSize="20dp"
         android:layout_marginTop="10dp"
        >
  </Button>
 </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:text="IPTAL"
        android:id="@+id/iptalbuttonkayitol"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:background="@android:color/white"
        android:layout_marginTop="2dp">
        </Button>

</LinearLayout>
</ScrollView>