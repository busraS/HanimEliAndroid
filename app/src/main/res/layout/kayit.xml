<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/kayit"
    android:weightSum="1"
    android:measureWithLargestChild="true"
    android:longClickable="false"
    android:background="@drawable/anas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt Ol"
        android:id="@+id/textView2"
        android:textSize="35dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E_Mail *"
        android:id="@+id/textView3"
        android:textSize="18dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailkayitoledittext"
        android:layout_alignRight="@+id/parolatekrarkayitoledittext"
        android:layout_alignEnd="@+id/parolatekrarkayitoledittext"

        android:layout_toEndOf="@+id/textView8"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView8"
        android:layout_below="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parola *"
        android:id="@+id/textView4"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/parolatekrarkayitoledittext"
        android:layout_above="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parola Onay *"
        android:id="@+id/textView5"
        android:textSize="18dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/parolakayitoledittext"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/kullaniciadikayitoledittext"
        android:layout_alignStart="@+id/kullaniciadikayitoledittext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Adı *"
        android:id="@+id/textView6"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kullaniciadikayitoledittext"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/emailkayitoledittext"
        android:layout_alignEnd="@+id/emailkayitoledittext"
        android:layout_alignLeft="@+id/emailkayitoledittext"
        android:layout_alignStart="@+id/emailkayitoledittext"
        android:layout_alignTop="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Üyelik Bilgileri"
        android:id="@+id/textView7"
        android:textSize="25dp"
        android:textIsSelectable="false"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sözleşme Kabulü"
        android:id="@+id/textView8"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Sözleşmesi"
        android:id="@+id/kabulkayitoledittext"
        android:textSize="17dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/parolakayitoledittext"
        android:layout_alignStart="@+id/parolakayitoledittext"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İsim"
        android:id="@+id/textView9"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/kabulkayitoledittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/isimkayitoledittext"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/textView8"
        android:layout_alignRight="@+id/parolatekrarkayitoledittext"
        android:layout_alignEnd="@+id/parolatekrarkayitoledittext"
        android:layout_alignTop="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soyisim"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soyisimkayitoledittext"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignLeft="@+id/isimkayitoledittext"
        android:layout_alignStart="@+id/isimkayitoledittext"
        android:layout_alignRight="@+id/isimkayitoledittext"
        android:layout_alignEnd="@+id/isimkayitoledittext"
        android:layout_alignBottom="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adres"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adreskayitoledittext"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/soyisimkayitoledittext"
        android:layout_alignStart="@+id/soyisimkayitoledittext"
        android:layout_alignRight="@+id/soyisimkayitoledittext"
        android:layout_alignEnd="@+id/soyisimkayitoledittext"
        android:layout_alignTop="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şehir"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textColor="@android:color/black" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sehirkayitolexpandableListView"
        android:layout_below="@+id/adreskayitoledittext"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/adreskayitoledittext"
        android:layout_alignStart="@+id/adreskayitoledittext"
        android:layout_alignBottom="@+id/textView12"
        android:footerDividersEnabled="false"
        android:textFilterEnabled="false"
        android:touchscreenBlocksFocus="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İlçe"
        android:id="@+id/textView13"
        android:layout_below="@+id/sehirkayitolexpandableListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:textColor="@android:color/black" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ilcekayitolexpandableListView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/sehirkayitolexpandableListView"
        android:layout_alignStart="@+id/sehirkayitolexpandableListView"
        android:layout_alignBottom="@+id/textView13"
        android:layout_below="@+id/sehirkayitolexpandableListView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefon Numarası"
        android:id="@+id/textView14"
        android:layout_below="@+id/ilcekayitolexpandableListView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İPTAL"
        android:id="@+id/iptalbuttonkayitol"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:background="#fff8fff1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt Ol"
        android:id="@+id/kayitbuttonkayitol"
        android:background="#fffefdff"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/iptalbuttonkayitol"
        android:layout_toStartOf="@+id/iptalbuttonkayitol" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/telefonkayitoledittext"
        android:layout_alignBottom="@+id/textView14"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14" />


</RelativeLayout>